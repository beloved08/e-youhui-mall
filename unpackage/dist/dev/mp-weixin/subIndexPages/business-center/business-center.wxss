page {
  background-color: #f6f6f6;
}
.business-box {
  width: 100%;
  display: flex;
  flex-direction: column;
}
.business-box .business-top {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.business-box .business-top .logo {
  margin-top: 60rpx;
  width: 100rpx;
  height: 100rpx;
}
.business-box .business-top .name {
  margin-top: 20rpx;
  font-size: 12px;
}
.business-box .business-top .rate {
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
}
.business-box .business-top .desc {
  margin-top: 30rpx;
  font-size: 12px;
}
.business-box .business-top .detail {
  width: 90%;
  background-color: #fff;
  margin-top: 20rpx;
  border-radius: 10rpx;
  padding: 20rpx;
}
.business-box .business-top .detail .detail-item {
  display: flex;
  flex-direction: row;
  font-size: 11px;
  margin-bottom: 15rpx;
}
.business-box .business-top .all {
  margin-top: 20rpx;
  width: 95%;
  height: 90rpx;
  background-color: #fff;
  display: flex;
  justify-content: center;
}
.business-box .business-top .all .all-commodity-text {
  font-size: 11px;
  line-height: 90rpx;
  color: #ff0000;
}

