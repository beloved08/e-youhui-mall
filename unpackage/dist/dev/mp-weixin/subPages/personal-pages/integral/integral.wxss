.container {
  width: 100%;
  height: 100vh;
  background-color: #f6f6f6;
  display: flex;
  flex-direction: column;
}
.container .balance-back {
  position: absolute;
  width: 100%;
  height: 20%;
  background-color: #17b978;
  border-radius: 0 0 5% 5%;
}
.container .balance-top {
  display: flex;
  flex-direction: column;
  width: 95%;
  z-index: 999;
  background-color: #fff;
  border-radius: 10rpx;
  margin: 0 auto;
  margin-top: 30rpx;
}
.container .balance-top .balance {
  display: flex;
  flex-direction: row;
  margin: 0 auto;
  margin-top: 40rpx;
}
.container .balance-top .balance .balance-text {
  font-size: 13px;
}
.container .balance-top .balance .balance-icon {
  margin-left: 10rpx;
}
.container .balance-top .balance-num {
  margin: 0 auto;
  margin-top: 30rpx;
  margin-bottom: 25rpx;
  font-size: 40px;
  font-weight: bold;
}
.container .balance-top .balance-button {
  width: 80%;
  margin: 0 auto;
  margin-top: 80rpx;
  margin-bottom: 30rpx;
}
.container .balance-detail {
  width: 95%;
  margin: 0 auto;
  margin-top: 20rpx;
  border-radius: 10rpx;
  background-color: #fff;
}
.container .balance-detail .balance-detail-title {
  font-size: 13px;
  font-weight: bold;
  margin-top: 20rpx;
  margin-left: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.container .balance-detail .balance-detail-title .balance-detail-all {
  margin-right: 30rpx;
  display: flex;
  flex-direction: row;
}
.container .balance-detail .balance-detail-title .balance-detail-all .balance-detail-text {
  font-weight: normal;
  font-size: 12px;
  margin-top: 5rpx;
}
.container .balance-detail .balance-detail-list {
  display: flex;
  flex-direction: column;
}
.container .balance-detail .balance-detail-list .balance-detail-list-item {
  width: 95%;
  margin: 0 auto;
  margin-bottom: 20rpx;
  margin-top: 10rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.container .balance-detail .balance-detail-list .balance-detail-list-item .item-left {
  display: flex;
  flex-direction: column;
}
.container .balance-detail .balance-detail-list .balance-detail-list-item .item-left .item-left-title {
  font-size: 12px;
}
.container .balance-detail .balance-detail-list .balance-detail-list-item .item-left .item-left-time {
  font-size: 11px;
  margin-top: 10rpx;
}
.container .balance-detail .balance-detail-list .balance-detail-list-item .item-right {
  display: flex;
  margin-right: 20rpx;
}
.container .balance-detail .balance-detail-list .balance-detail-list-item .item-right .item-right-num {
  font-size: 15px;
  font-weight: bold;
  margin-top: 20rpx;
}

