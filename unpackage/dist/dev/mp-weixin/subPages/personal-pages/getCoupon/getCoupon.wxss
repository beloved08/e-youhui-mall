page {
  background-color: #ff0000;
}
.container {
  width: 100%;
  background-color: #f6f6f6;
  display: flex;
  flex-direction: column;
}
.container .balance-top {
  display: flex;
  flex-direction: column;
  width: 95%;
  z-index: 999;
  background-color: #fff;
  border-radius: 10rpx;
  margin: 0 auto;
  margin-top: 30rpx;
}
.container .balance-top .balance {
  display: flex;
  flex-direction: row;
  margin: 0 auto;
  margin-top: 40rpx;
}
.container .coupon-box {
  width: 100%;
  margin: 0 auto;
  background-color: #ff0000;
  display: flex;
  flex-direction: column;
}
.container .coupon-box .coupon-tab {
  width: 100%;
}
.container .coupon-box .coupon-list {
  width: 90%;
  margin: 0 auto;
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
}
.container .coupon-box .coupon-list .coupon-list-item {
  width: 100%;
  margin: 0 auto;
  display: flex;
  flex-direction: row;
  margin-bottom: 20rpx;
}
.container .coupon-box .coupon-list .coupon-list-item .coupon-left {
  width: 70%;
  background-color: #fff;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
}
.container .coupon-box .coupon-list .coupon-list-item .coupon-left .left-title {
  font-size: 13px;
  font-weight: bold;
  margin-top: 10rpx;
  margin-left: 20rpx;
}
.container .coupon-box .coupon-list .coupon-list-item .coupon-left .commodity-list {
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
  margin-left: 20rpx;
}
.container .coupon-box .coupon-list .coupon-list-item .coupon-left .commodity-list .commodity-list-item {
  width: 35%;
  height: 80px;
  display: flex;
  flex-direction: column;
  margin-right: 10rpx;
}
.container .coupon-box .coupon-list .coupon-list-item .coupon-left .commodity-list .commodity-list-item .commodity-image {
  width: 100%;
  height: 70%;
  background-color: #f6f6f6;
  border-radius: 10rpx;
}
.container .coupon-box .coupon-list .coupon-list-item .coupon-left .commodity-list .commodity-list-item .commodity-price {
  margin: 0 auto;
  margin-top: 10rpx;
  font-size: 12px;
  font-weight: 800;
  color: #ff0000;
}
.container .coupon-box .coupon-list .coupon-list-item .coupon-right {
  width: 30%;
  background-color: #fff;
  border-radius: 10rpx;
  border-left: 1rpx solid #f6f6f6;
  display: flex;
  flex-direction: column;
}
.container .coupon-box .coupon-list .coupon-list-item .coupon-right .coupon-top {
  width: 80%;
  margin: 0 auto;
  border-radius: 0 0 15rpx 15rpx;
  background-color: #feca4f;
}
.container .coupon-box .coupon-list .coupon-list-item .coupon-right .coupon-top .title {
  font-size: 11px;
  color: #836627;
  text-align: center;
  margin-top: 5rpx;
  margin-bottom: 10rpx;
}
.container .coupon-box .coupon-list .coupon-list-item .coupon-right .coupon-right-desc {
  margin: 0 auto;
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
}
.container .coupon-box .coupon-list .coupon-list-item .coupon-right .coupon-right-desc .desc-one {
  font-size: 11px;
  color: #000;
}
.container .coupon-box .coupon-list .coupon-list-item .coupon-right .coupon-right-desc .desc-two {
  font-size: 13px;
  color: #ff0000;
}
.container .coupon-box .coupon-list .coupon-list-item .coupon-right .coupon-bottom {
  width: 80%;
  margin: 0 auto;
  margin-top: 20rpx;
  margin-bottom: 10rpx;
}

