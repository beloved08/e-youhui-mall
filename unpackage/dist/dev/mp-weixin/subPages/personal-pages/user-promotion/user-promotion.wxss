page {
  background-color: #f6f6f6;
}
.container {
  width: 100%;
  display: flex;
  flex-direction: column;
}
.container .qr {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.container .download {
  margin-top: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.container .activity-box {
  width: 100%;
  margin-top: 20rpx;
  background-color: #fff;
}
.container .activity-box .activity-item {
  width: 100%;
  display: flex;
  flex-direction: row;
}
.container .activity-box .activity-item .activity-img {
  width: 15%;
}
.container .activity-box .activity-item .activity-desc {
  width: 65%;
  display: flex;
  flex-direction: row;
  flex-direction: column;
}
.container .activity-box .activity-item .activity-desc .top {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.container .activity-box .activity-item .activity-desc .top .name {
  width: 40%;
  font-size: 12px;
}
.container .activity-box .activity-item .activity-desc .top .time {
  width: 60%;
  font-size: 10px;
  color: #5a5a5a;
  display: flex;
  justify-content: right;
}
.container .activity-box .activity-item .activity-desc .bottom {
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
}
.container .activity-box .activity-item .create-url {
  width: 20%;
  display: flex;
  justify-content: center;
  align-items: center;
}

