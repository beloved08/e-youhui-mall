.container {
  width: 100%;
  height: 100vh;
  background-color: #f6f6f6;
  display: flex;
  flex-direction: column;
}
.container .user {
  width: 100%;
  margin: 0 auto;
  background: #ef3b36;
  background: linear-gradient(to bottom, #ef3b36, #f6f6f6);
}
.container .user .top {
  width: 90%;
  display: flex;
  flex-direction: row;
  margin: 0 auto;
  margin-top: 50rpx;
  margin-bottom: 40rpx;
}
.container .user .top .user-image {
  width: 17%;
  height: 110rpx;
  border-radius: 50%;
  border: 2px solid #fff;
}
.container .user .top .user-image .image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.container .user .top .user-name {
  width: 50%;
  display: flex;
  flex-direction: column;
  margin-top: 15rpx;
  margin-left: 10rpx;
}
.container .user .top .user-name .user-name-top {
  display: flex;
  flex-direction: row;
}
.container .user .top .user-name .user-name-top .user-name-top-text {
  font-size: 14px;
  font-weight: bold;
  color: #fff;
  margin-right: 10rpx;
}
.container .user .top .user-name .user-desc {
  color: #fff;
}
.container .user .top .user-name .user-desc .user-desc-contect {
  font-size: 11px;
}
.container .user .top .buy-vip {
  width: 40%;
  height: 100rpx;
  margin-top: 20rpx;
}
.container .user .top .buy-vip .activate-now {
  color: #535353;
  font-size: 11px;
  background-color: #f0ce96;
  width: 150rpx;
  height: 55rpx;
  margin: 0 auto;
  text-align: center;
  line-height: 55rpx;
  border-radius: 50rpx;
}
.container .detail {
  width: 90%;
  margin: 0 auto;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-radius: 10rpx;
  background-color: #fff;
}
.container .detail-1 {
  width: 90%;
  margin: 0 auto;
  border-radius: 10rpx;
  background-color: #fff;
  padding: 20rpx;
  font-size: 12px;
}

