page {
  background-color: #f6f6f6;
}
.container {
  width: 100%;
  background-color: #f6f6f6;
  display: flex;
  flex-direction: column;
}
.container .address-box {
  width: 95%;
  margin: 0 auto;
  margin-top: 10rpx;
  margin-bottom: 80rpx;
}
.container .address-box .address-item {
  padding: 20rpx;
  width: 90%;
  background-color: #fff;
  margin: 0 auto;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
}
.container .address-box .address-item .address-top {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.container .address-box .address-item .address-top .address-left {
  display: flex;
  flex-direction: column;
}
.container .address-box .address-item .address-top .address-left .address-left-top {
  display: flex;
  flex-direction: row;
}
.container .address-box .address-item .address-top .address-left .address-left-top .address-name {
  font-size: 14px;
  font-weight: bold;
}
.container .address-box .address-item .address-top .address-left .address-left-top .address-phone {
  font-size: 12px;
  margin-left: 20rpx;
}
.container .address-box .address-item .address-top .address-left .address-left-bottom {
  margin-top: 15rpx;
  margin-left: 10rpx;
  font-size: 12px;
  color: #888;
}
.container .address-box .address-item .address-bottom {
  margin-top: 20rpx;
  border-top: 1px dashed #888;
}
.container .address-box .address-item .address-bottom .address-bottom-desc {
  margin-top: 15rpx;
  font-size: 16px;
}
.container .no-address-box {
  width: 100%;
  height: 100vh;
  background-color: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.container .no-address-box .no-address-desc {
  display: flex;
  flex-direction: column;
}
.container .no-address-box .no-address-desc .no-address-text {
  margin-top: 30rpx;
  font-size: 14px;
  text-align: center;
}
.container .add-address {
  position: fixed;
  bottom: 0;
  width: 100%;
  line-height: var(--footer-height);
  color: #fff;
}

