page {
  background-color: #f6f6f6;
}
.container {
  width: 100%;
  background-color: #f6f6f6;
  display: flex;
  flex-direction: column;
}
.container .subsection-box {
  width: 98%;
  margin: 0 auto;
}
.container .collect-content {
  width: 95%;
  margin: 0 auto;
  margin-top: 15rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  display: flex;
  flex-wrap: wrap;
}
.container .collect-content .empty {
  height: 100vh;
  background-color: #f6f6f6;
  margin: 0 auto;
  display: flex;
  justify-content: center;
  align-items: center;
}
.container .collect-content .collect-content-item {
  width: 40%;
  height: 380rpx;
  margin: 0 auto;
  padding: 15rpx;
  margin-top: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
}
.container .collect-content .collect-content-item .collect-image {
  width: 90%;
  height: 73%;
  margin: 0 auto;
}
.container .collect-content .collect-content-item .collect-desc {
  display: flex;
  flex-direction: column;
  width: 93%;
  margin: 0 auto;
  margin-top: 20rpx;
}
.container .collect-content .collect-content-item .collect-desc .collect-top {
  display: flex;
  flex-direction: row;
  width: 100%;
}
.container .collect-content .collect-content-item .collect-desc .collect-top .collect-title {
  width: 95%;
  margin: 0 auto;
  margin-left: 10rpx;
  font-size: 10px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.container .collect-content .collect-content-item .collect-desc .collect-action {
  width: 90%;
  margin: 0 auto;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: row;
}
.container .collect-content .collect-content-item .collect-desc .collect-action .collect-price {
  width: 60%;
  margin: 0 auto;
  color: red;
}
.container .collect-content .collect-content-item .collect-desc .collect-action .collect-price .collect-price-unit {
  font-size: 11px;
}
.container .collect-content .collect-content-item .collect-desc .collect-action .collect-price .collect-price-num {
  font-size: 12px;
  font-weight: bold;
}
.container .collect-content .collect-content-item .collect-desc .collect-action .collect-cancel {
  width: 40%;
  margin: 0 auto;
  margin-top: 12rpx;
  font-size: 10px;
  color: red;
}

